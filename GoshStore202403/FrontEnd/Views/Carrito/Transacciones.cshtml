<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orden de Compra</title>
    <link rel="stylesheet" href="~/css/Pedidos.css" />
</head>
<body>
    <div class="pedido-container">
        <h2 class="page-title">Orden de Compra</h2>

        @if (TempData["Files"] != null)
        {
            <table class="pedido-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Archivo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var files = TempData["Files"] as List<string>;
                        int index = 1;
                        foreach (var file in files)
                        {
                            var fileName = System.IO.Path.GetFileName(file);
                            <tr>
                                <td>@index</td>
                                <td>@fileName</td>
                                <td class="action-buttons">
                                    <a href="@Url.Content(file)" class="btn btn-details" download>Descargar</a>
                                    <form asp-action="EliminarArchivo" asp-controller="Carrito" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="fileName" value="@fileName" />
                                        <button type="submit" class="btn btn-delete">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No se han generado archivos aún.</p>
        }

        <a href="@Url.Action("Index", "Carrito")" class="btn btn-back">Volver al Carrito</a>
    </div>
</body>
</html>
