@model FrontEnd.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/BtnDetails.css" />

<div class="details-container">
    <h1 class="page-title">Detalles del Usuario</h1>
    <h4>Información del Usuario</h4>
    <hr />

    <dl class="details-list">
        <dt>
            <strong>@Html.DisplayNameFor(model => model.IdUsuario):</strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>

        <dt>
            <strong>@Html.DisplayNameFor(model => model.Nombre):</strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            <strong>@Html.DisplayNameFor(model => model.Correo):</strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>
    </dl>

    <div class="action-links">
        @Html.ActionLink("Editar", "Edit", new { id = Model.IdUsuario }, new { @class = "btn btn-edit" }) |
        <a asp-action="Index" class="btn btn-back">Volver a la Lista</a>
    </div>
</div>
