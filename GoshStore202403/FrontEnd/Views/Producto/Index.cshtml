 @model IEnumerable<FrontEnd.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Productos";
}

<!-- Shop Product Start -->

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container-fluid">
    <div class="row pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="@Url.Content(item.Imagen)" alt="@item.NombreProducto">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="@Url.Action("Details", new { id = item.IdProducto })">
                                <i class="bi bi-info-circle">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
